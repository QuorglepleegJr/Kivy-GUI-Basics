#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: self.length, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    p1: player_1
    p2: player_2

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        id: p1_score
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.p1.score)
    
    Label:
        id: p2_score
        font_size: 70
        center_x: root.width * 3/4
        top: root.top - 50
        text: str(root.p2.score)
    
    PongBall:
        id: pong_ball
        center: self.parent.center
    
    PongPaddle:
        id: player_1
        x: root.x
        center_y: root.center_y
    
    PongPaddle:
        id: player_2
        x: root.width - self.width
        center_y: root.center_y